<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IntroBootstrap</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IntroBootstrap.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-sm">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">IntroBootstrap</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-xxl-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown1" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Layout
                            </a>
                            <ul class="dropdown-menu ms-auto" aria-labelledby="navbarScrollingDropdown1">
                                <li> <a class="nav-link text-dark ps-2" asp-area="" asp-controller="Home" asp-action="Index">Divs</a></li>
                                <li><a class="nav-link text-dark ps-2" asp-area="" asp-controller="Home" asp-action="Ejemplos2">Gutters</a></li>
                                <li><a class="nav-link text-dark ps-2" asp-area="" asp-controller="Home" asp-action="Tamanyos">Tamaños</a></li>
                                <li><a class="nav-link text-dark ps-2" asp-area="" asp-controller="Home" asp-action="Espacios">Espacios</a></li>
                               
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown1" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Contenido
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown1">
                                <li><a class="nav-link text-dark ps-2" asp-area="" asp-controller="Home" asp-action="Imagenes">Imagenes</a></li>
                                <li><a class="nav-link text-dark ps-2" asp-area="" asp-controller="Home" asp-action="Tablas">Tablas</a></li>
                                <li> <a class="nav-link text-dark ps-2" asp-area="" asp-controller="Home" asp-action="Video">Video</a></li>

                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown1" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Componentes
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown1">                               
                                <li><a class="nav-link text-dark ps-2" asp-area="" asp-controller="Home" asp-action="Acordeon">Acordeón</a></li>
                                <li><a class="nav-link text-dark ps-2" asp-area="" asp-controller="Home" asp-action="Alertas">Alertas</a> </li>
                                <li> <a class="nav-link text-dark ps-2" asp-area="" asp-controller="Home" asp-action="Carousel">Carousel</a></li>
                                <li><a class="nav-link text-dark ps-2" asp-area="" asp-controller="Home" asp-action="Modales">Modales</a> </li>
                                <li> <a class="nav-link text-dark ps-2" asp-area="" asp-controller="Home" asp-action="Tabs">Tabs</a></li>
                                <li> <a class="nav-link text-dark ps-2" asp-area="" asp-controller="Home" asp-action="OffCanvas">Offcanvas</a></li>
                                <li> <a class="nav-link text-dark ps-2" asp-area="" asp-controller="Home" asp-action="Toast">Toast</a></li>
                                
                            </ul>
                        </li>                                             
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Utilidades">Utilidades</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Formularios">Formularios</a>
                        </li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - IntroBootstrap - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
